<!DOCTYPE html>
<html>
<head>
    <title><%= yield(:page_title) %>|Bootblog</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application',  media: 'all', 'data-turbolinks-track' => true %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
</head>

<body>
<div>
    <%= render "common/header" %>
</div>
<div id="tabandbreadcrumbs">
    <%= render "common/tab" %>
    <%= render_breadcrumbs(">") %>

</div>

<div id="mainwall" style="min-height: 600px;">
    <div id="flash" class="container">
        <% flash.each do |name, msg| %>
            <div class="alert alert-<%=name == :notice ? name == :notice ? "info" : "success" : "danger"%>">
                <a class="close" data-dismiss="alert" style="align-content: center">x</a>
                <%= msg %>
            </div>
        <% end %>
    </div>
    <div classs="container <%= controller_name %> <%= action_name %>" style="padding-top: 10px;">
        <%= yield %>
    </div>
</div>

<div>
    <%= render "common/footer" %>
</div>

</body>
<script type="text/javascript">
    $(document).ready(function(){
        setTimeout(function(){
            $('#flash').slideUp();
        }, 7000);
    })
</script>
</html>
