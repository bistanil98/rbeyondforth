<div class="bs-example">
    <table class="table">
        <caption><h3>Latest 10 websites checked for validations</h3></caption>
        <thead>
        <tr class="info">
            <th>S.No.</th>
            <th>Site Name</th>
            <th>Visit Date & Time</th>
            <th>Validation Errors</th>
        </tr>
        </thead>
        <tbody>
        <!--variable added for serial no.-->
        <% i=1 %>
        <% @result.each do |d| %>
            <tr class="active">
                <td><%= i %></td>
                <td><%= d.site_uri %></td>
                <td><%= d.created_at %></td>
                <td><%= d.errnum %></td>
            </tr>
            <% i=i+1 %>
        <% end %>
        </tbody>
    </table>
</div>
